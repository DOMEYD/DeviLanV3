{% block form_errors %}
	{% spaceless %}
		{% if errors|length > 0 %}
			{% for error in errors %}
				<div class="alert alert-danger" style="margin: 5px 0;">{{ error.messageTemplate|trans(error.messageParameters, 'validators') }}</div>
			{% endfor %}
		{% endif %}
	{% endspaceless %}
{% endblock form_errors %}