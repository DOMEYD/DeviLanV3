<!DOCTYPE HTML>
<html>
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
		<title>{% block title %}Devilan{% endblock %}</title>
		{% block stylesheets %}
			<link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}" type="text/css" />
			<link rel="stylesheet" href="{{ asset('css/bootstrap-glyphicons.css') }}" type="text/css" />
			<link rel="stylesheet" type="text/css" href="{{ asset('css/design.css') }}" />
		{% endblock %}
		<!--[if lt IE 9]>
			<script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
		<![endif]-->
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
	</head>
	<body>
		<nav>
			<ul>
				<li><a href="{{ path('UAblog_default') }}"><span class="glyphicon glyphicon-home glyphicon-posrec"></span></a></li>
				<li><a href="{{ path('UAMatchBundle_ViewGameSelect') }}">{{'menu.match'|trans|upper}}</a></li>
				<li><a href="">{{'menu.rules'|trans|upper}}</a></li>
				<li><a href="{{ path('UAMatchBundle_viewTeam') }}">{{'menu.teams'|trans|upper}}</a></li>
				<li><a href="">{{'menu.faq'|trans|upper}}</a></li>
			</ul>
		</nav>
		<section class="row">
			{% block body %}
			{% endblock %}

			<aside class="col-lg-2">
				{% block aside %}
					{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}

						<div class="panel panel-default">
							<div class="panel-heading">{{'adminBar.hello'|trans}}, {{ app.user.username }}</div>
							<div class="list-group">
								<a href="{{ path('UAUser_admin') }}" class="list-group-item">{{'adminBar.administration'|trans}}</a>
								<a href="{{ path('fos_user_security_logout') }}" class="list-group-item">{{'adminBar.logout'|trans}}</a>
							</div>
						</div>

					{% else %}

						<form action="{{ path('fos_user_security_check') }}" method="post" style="text-align:center;">
							<label for="username">{{'adminBar.input.login'|trans}}</label>
							<input type="text" id="username" name="_username" placeholder="{{'adminBar.input.login'}}" class="form-control" />

							<label for="password">{{'adminBar.input.password'|trans}}</label>
							<input type="password" id="password" name="_password" placeholder="{{'adminBar.input.password'|trans}}" class="form-control" />
							<br />
							<div class="btn-group">
								<input type="submit" value="{{'adminBar.log'|trans}}" class="btn btn-default" />
								<a href="{{ path('fos_user_registration_register') }}" class="btn btn-default">{{'adminBar.register'|trans}}</a>
							</div>
						</form>

					{% endif %}
				{% endblock %}
			</aside>
		</section>
		<footer>
			{{ 'footer'|trans }}
		</footer>

		{% block javascripts %}
		
		{% endblock %}
	</body>
</html>