{% extends "UABlogBundle::layout.html.twig" %}

{% block title %}{{ parent() }} - Supprimer un article{% endblock %}

{% block body %}
	<article class="col-lg-8 col-lg-offset-1">
		<h2 style="text-align:center;">Supprimer un article</h2>

		<p>
		Etes-vous certain de vouloir supprimer l'article "{{ article.titre }}" ?
		</p>
		<form method="POST" {{ form_enctype(form) }}>
			<a href="{{ path('UAblog_ajouter') }}" class="btn btn-default"><span class="glyphicon glyphicon-chevron-left"></span> Revenir en arri√®re</a>
            <input type="submit" class="btn btn-danger" value="Supprimer" />
			{{ form_rest(form) }}
		</form>
	</article>
	{{ parent() }}
{% endblock %}